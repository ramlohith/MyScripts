#!/usr/bin/python

n = int(raw_input())
a = []

a = map(int,raw_input().split())
b = [i for i in a if i%2==0]

if len(b) >= 2:
        for i in a:
                if i%2!=0:
                        print a.index(i) + 1
                        break
else:
        for i in a:
                if i%2==0:
                        print a.index(i) + 1
                        break
